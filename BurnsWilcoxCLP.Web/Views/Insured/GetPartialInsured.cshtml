@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@model BurnsWilcoxCLP.Models.InsuredEntity
<script src="~/Content/js/core/libraries/jquery.validate.min.js"></script>
@using (Html.BeginForm("SavePolicyInsured", "Insured", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <script type="text/javascript">
        $(document).ready(function () {
            $("#CopyToMailingAddress").change(function () {
                if (this.checked)
                    $('#mailingAddress').fadeIn();
                else
                    $('#mailingAddress').fadeOut();
            });
            $("#isuredTitle").click(function(){
                $("#insuredDetails").toggle();
            });            
        })

        
      
    </script>


    <div class="container">
     
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title" >
                        <a data-toggle="collapse" data-parent="#Insured" href="#insuredDetails" id="isuredTitle">Insured Details</a>
                    </h4>
                </div>
                <div id="insuredDetails" class="panel-body collapse panel-collapse">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Insured Type</label>
                                @Html.DropDownListFor(m => m.InsuredType, new SelectList(ViewBag.InsuredTypeList, "Id", "Name"), "--Select Insured Type--", new { @class = "form-control", tabindex = "1", required = "required" })
                                @Html.ValidationMessageFor(m => m.InsuredType)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Legal Entity</label>
                                @Html.DropDownListFor(m => m.LegalEntity, new SelectList(ViewBag.LEList, "Id", "Name"), "--Select Legal Entity--", new { @class = "form-control", required = "required", tabindex = "7" })
                                @Html.ValidationMessageFor(m => m.LegalEntity)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Title</label>
                                @Html.DropDownListFor(m => m.Title, new SelectList(ViewBag.TitleList, "Id", "Name"), "--Select Title--", new { @class = "form-control", required = "required", tabindex = "2" })
                                @Html.ValidationMessageFor(m => m.Title)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", tabindex = "8" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First Name</label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", tabindex = "3" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Home Phone</label>
                                @Html.TextBoxFor(m => m.HomePhone, new { @class = "form-control", tabindex = "9" })
                                @Html.ValidationMessageFor(m => m.HomePhone)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Middle Name</label>
                                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", tabindex = "4" })
                                @Html.ValidationMessageFor(m => m.MiddleName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Business Phone</label>
                                @Html.TextBoxFor(m => m.BussinessPhone, new { @class = "form-control", tabindex = "10" })
                                @Html.ValidationMessageFor(m => m.BussinessPhone)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", tabindex = "5" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Fax</label>
                                @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", tabindex = "11" })
                                @Html.ValidationMessageFor(m => m.Fax)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Suffix</label>
                                @Html.DropDownListFor(m => m.Suffix, new SelectList(ViewBag.SuffixList, "Id", "Name"), "--Select Suffix--", new { @class = "form-control", required = "required", tabindex = "6" })
                                @Html.ValidationMessageFor(m => m.Suffix)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title" id="primaryTitle">
                        <a data-toggle="collapse" data-parent="#Insured" href="#primaryAddress">Primary Address</a>
                    </h4>
                </div>
                <div id="primaryAddress" class="collapse panel-collapse">
                    <div class="panel-body ">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Address Line 1</label>
                                    @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.AddressLine1)
                                </div>
                                <div class="form-group">
                                    <label>Address Line 1</label>
                                    @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.AddressLine2)
                                </div>
                                <div class="form-group">
                                    <label>Postal Code</label>
                                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.PostalCode)
                                </div>
                                <div class="form-group">
                                    <label>City</label>
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.City)
                                </div>
                                <div class="form-group">
                                    <label>State</label>
                                    @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.State)
                                </div>
                                <div class="form-group">
                                    <label>Country</label>
                                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Country)
                                </div>
                                <div class="form-group">
                                    <label>Save As First Location</label>
                                    @Html.CheckBoxFor(m => m.SaveAsFirstLocation, new { @class = "checkbox" })
                                </div>
                                <div class="form-group">
                                    <label>Copy To Mailing Address</label>
                                    @Html.CheckBox("CopyToMailingAddress", new { @class = "checker", @id = "CopyToMailingAddress" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#Insured" href="#mailingAddress">Mailing Address</a>
                    </h4>
                </div>
                <div id="mailingAddress" class="panel-body panel-collapse collapse " style="display:none;">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Address Line 1</label>
                                @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.AddressLine1)
                            </div>
                            <div class="form-group">
                                <label>Address Line 1</label>
                                @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.AddressLine2)
                            </div>
                            <div class="form-group">
                                <label>Postal Code</label>
                                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.PostalCode)
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.City)
                            </div>
                            <div class="form-group">
                                <label>State</label>
                                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.State)
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Country)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

}
