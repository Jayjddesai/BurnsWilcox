@model BurnsWilcoxCLP.Models.TeamEntity


<body>

    <div class="page-container">
        <div class="page-content">
            <div class="content-wrapper">
                <fieldset>
                    <div class="row pt-30">
                        <div class="col-sm-12">
                            @using (Html.BeginForm("AddEditTeam", "Team", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "TeamForm" }))
                            {
                                @*@Html*@
                                @Html.HiddenFor(m=>m.TeamId)
                                @Html.ValidationSummary(true)
                                <div class="page-container">
                                    <div class="col-lg-12 client-registration">
                                        <h4 class="category-title">
                                           Team Managaement 
                                        </h4>
                                        @Html.Partial("_Notifications")
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Team Name:</label>
                                                    @Html.TextBoxFor(m =>m.TeamName, new { @placeholder = "Team Name", @class = "form-control", @tabindex = "1" })
                                                    @Html.ValidationMessageFor(m => m.TeamName, null, new { @class = "validation-error-label" })
                                                   
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Effective Date:</label>
                                                    @Html.TextBoxFor(m => m.EffectiveDate, new { @class = "form-control datetime", @tabindex = "2" })
                                                    @Html.ValidationMessageFor(m => m.EffectiveDate, null, new { @class = "validation-error-label" })
                                                </div>
                                            </div>
                                            
                                                    @Html.Partial("~/Views/Team/GetUserFromTeam.cshtml")
                                            <div class="row">
                                                <div class="col-sm-12" style="margin-bottom:10px;">
                                               @if (Model.TeamId > 0)
                                               {
                                                <button class="btn btn-primary mt-5 mr-10 pull-right" type="submit">Save</button>
                                               }
                                               else
                                               {
                                                <button class="btn btn-primary mt-5 mr-10 pull-right" type="submit">Save and Continue</button>
                                               }
                                                <button class="btn btn-primary mt-5 mr-10 pull-right" type="button" onclick="RedirectToUrl();">Cancel</button>
                                                 

                                                </div>
                                            </div>


                                        </div>

                                        

                                    </div>

                                </div>


                            }

                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</body>


<script>

    $(document).ready(function () {
        debugger;
        var TeamId = $("#TeamId").val();
        if (TeamId == 0) {
            $("#AvailableUser").attr('disabled', true);
            $("#SelectUser").attr('disabled', true);
            $("#AddTeamMember").attr('disabled', true);
            $("#DeleteTeamMember").attr('disabled', true);
        }
        else {
            $("#AvailableUser").attr('disabled', false);
            $("#SelectUser").attr('disabled', false);
            $("#AddTeamMember").attr('disabled', false);
            $("#DeleteTeamMember").attr('disabled', false);
        }
    });

    function RedirectToUrl()
    {

        window.location.href='@Url.Action("Index", "Team")'
    }
   
  

</script>
