@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;

@model BurnsWilcoxCLP.Models.TermEntity

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row pt-30">
        <div class="col-sm-12">
            <div class="form-group col-sm-3">
                <label>Effective Date</label>
                @Html.TextBoxFor(m => m.EffectiveDate, new { @class = "form-control", @tabindex = "1" })
                @Html.ValidationMessageFor(m => m.EffectiveDate)
            </div>
            <div class="form-group col-sm-3">
                <label>Term In Months</label>
                @*@Html.DropDownListFor(m => m.TermInMonths, new SelectList(ViewBag.TermList, "Id", "Name"), "--Select Month--", new { @class = "form-control", required = "required", @tabindex = "2" })
                @Html.ValidationMessageFor(m => m.TermInMonths)*@
            </div>
            <div class="form-group col-sm-3">
                <label>MEP %</label>
                @Html.TextBoxFor(m => m.MEP, new { @class = "form-control", @tabindex = "3" })
                @Html.ValidationMessageFor(m => m.MEP)
            </div>
        </div>
    </div>
}
