<!DOCTYPE html>
@using BurnsWilcoxCLP;
@using BurnsWilcoxCLP.Web.Helper;
@using BurnsWilcoxCLP.Models;
@using Kendo.Mvc.UI;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Burns &amp; Wilcox</title>

    @Styles.Render("~/Content/Styles")
    @Styles.Render("~/Content/ui")
    @Styles.Render("~/Content/TelerikReport")
    @Scripts.Render("~/Content/scripts")
    @Scripts.Render("~/bundles/kendoJS")
    @Scripts.Render("~/bundles/TelerikReport")
    @Scripts.Render("~/bundles/JsZip")
</head>
<body class="pace-done">

    <div>
        <div class="navbar navbar-inverse">
            <div class="navbar-header">
                <a class="navbar-brand" href="javascript:;"><img src="~/Content/Images/logo.png" alt=""></a>
                <ul class="nav navbar-nav visible-xs-block">
                    <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
                    <li><a class="sidebar-mobile-main-toggle"><i class="icon-paragraph-justify3"></i></a></li>
                </ul>
            </div>
            <div class="navbar-collapse collapse" id="navbar-mobile">

                <ul class="nav navbar-nav pt-15">
                    <li><a class="sidebar-control sidebar-main-toggle hidden-xs" onclick="fnsidebarToggle();"><i class="icon-paragraph-justify3"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown dropdown-user mt-15">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            @if (ProjectSession.LoginUserDetails != null && ProjectSession.LoginUserDetails.DisplayName != null)
                            {
                                <img src="~/Content/Images/placeholder.jpg" class="position-left" alt=""><span class="userLogo"><label> @ProjectSession.LoginUserDetails.DisplayName</label></span>

                           }
                            <i class="caret"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a href="@Url.Action("Logout", "Login")">
                                    <i class="fa fa-sign-out"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="page-container">
            <div class="page-content">
                <div class="sidebar sidebar-main">
                    <div class="sidebar-content">
                        <div class="sidebar-user">
                            <div class="sidebar-category sidebar-category-visible">
                                <div class="category-content no-padding">
                                    @Html.GenerateMenu()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-wrapper">
                    <div class="content">
                        @RenderBody()
                    </div>
                    <div class="footer text-muted text-center">
                        &copy; 2017. <a href="#">Burns&amp;Wilcox</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>

<script>
    $(document).ready(function () {
        var currentDate = new Date();
        $('.datetime').datepicker({
            dateFormat: "dd/M/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+2",
        });

    });
    function fnsidebarToggle() {
        if ($('.pace-done').hasClass('sidebar-xs')) {
            $('.pace-done').removeClass('sidebar-xs');
        }
        else {
            $('.pace-done').addClass('pace-done sidebar-xs');
        }
    }

</script>
