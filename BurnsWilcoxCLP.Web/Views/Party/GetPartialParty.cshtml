@model BurnsWilcoxCLP.Models.PartyEntity
<style>
    .lengthbox
    {
        width:300px;
    }
</style>

@using (Html.BeginForm("GetPartialParty", "Party", FormMethod.Post, new { @id = "formParty" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row pt-30">
        <div class="col-sm-12">
            <div class="form-group col-sm-3">
                <label>Office</label>
                @Html.DropDownListFor(m => m.OfficeId, new SelectList("Id", "Name"), "--Select--", new { @class = "form-control", tabindex = "1", required = "required" })
                @Html.ValidationMessageFor(m => m.OfficeId)
            </div>

            <div class="form-group col-sm-3">
                <label>Producer</label>
                @Html.DropDownListFor(m => m.ProducerId, new SelectList("Id", "Name"), "--Select--", new { @class = "form-control", tabindex = "2" })
                @Html.ValidationMessageFor(m => m.ProducerId)
            </div>

            <div class="form-group col-sm-3">
                <label>Agency</label>
                @Html.TextBoxFor(m => m.Agency, new { @class = "form-control", tabindex = "3",@Placeholder="Quick Search " })
                @Html.ValidationMessageFor(m => m.Agency)
            </div>

            <div class="form-group col-sm-3">
                <label>Affiliate</label>
                @Html.DropDownListFor(m => m.AffiliateId, new SelectList( "Id", "Name"), "--Select State--", new { @class = "form-control", tabindex = "3" })
                @Html.ValidationMessageFor(m => m.AffiliateId)
            </div>
            </div>
    </div>
}